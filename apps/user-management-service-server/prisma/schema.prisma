datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Parent {
  children  EnumParentChildren[]
  createdAt DateTime             @default(now())
  email     String?
  id        String               @id @default(cuid())
  name      String?
  updatedAt DateTime             @updatedAt
  users     User[]
}

model OAuth {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  provider  String?
  token     String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  oAuths    OAuth[]
  parent    Parent?  @relation(fields: [parentId], references: [id])
  parentId  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumParentChildren {
  Option1
}
